source /usr/lib/gmi/core.sh
source /usr/lib/gmi/init.sh
source /usr/lib/gmi/new.sh
source /usr/lib/gmi/edit.sh
source /usr/lib/gmi/micro.sh
source /usr/lib/gmi/files.sh
source /usr/lib/gmi/deploy.sh
source /usr/lib/gmi/archive.sh
source /usr/lib/gmi/list.sh
source /usr/lib/gmi/help.sh

echo '                 _'
echo '  __ _ _ __ ___ (_)'
echo " / _\` | '_ \` _ \| | gemini"
echo '| (_| | | | | | | | capsule'
echo ' \__, |_| |_| |_|_| generator'
echo ' |___/'
echo
echo "gmi -- version $__version"
echo "This program is free software."
echo -e "It is distributed AS IS with NO WARRANTY.\n"

[[ $1 ]] || {
  __err M "type 'gmi help' for more info."
  exit
}

case $1 in
  init         ) init ;;
  new          ) shift; new "$*" ;;
  post         ) shift; post "$*" ;;
  articles     ) entry="$(article_list)" ;;
  index        ) edit_index index ;;
  micro        ) edit_index micro ;;
  archived     ) list_archived ;;
  deploy       ) deploy ;;
  help         ) help ;;
  deploy-micro ) deploy micro ;;
  archive-index) edit_index archive ;;
  auto-archive ) confirm && auto_archive ;;
  *            ) __err E "invalid option '$1'"
esac

[[ -a $entry ]] && {
  title="$(get_title "$entry")"
  __err M "${entry#$src*}"
  __err M "$title"
  printf ":: [e]dit [r]ename [a]rchive [d]elete: "
  read -r r
  case $r in
    a) confirm "archive?" && archive "$entry" ;;
    d) confirm "delete?" && delete "$entry" ;;
    e) edit "$entry" ;;
    r) retitle_usr "$entry" ;;
    *) __err M "cancelled." ;;
  esac
}
